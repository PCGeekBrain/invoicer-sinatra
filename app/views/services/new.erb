<h1>New Service</h1>
<% if flash.has?(:message) %>
    <div class="alert alert-danger" role="alert"><%= flash[:message] %></div>
<% end %>
<form action="/services" method="post">
<input class="form-control" type="text" name="service[name]" placeholder="Service Name" required>
<br/>
<input class="form-control"type="number" name="service[price]" placeholder="Service Price" required>
<br/>
<input class="btn btn-primary" type="submit" value="Create Service">
</form>