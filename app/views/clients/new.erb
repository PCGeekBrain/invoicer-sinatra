<h1>New Client</h1>
<% if flash.has?(:message) %>
    <div class="alert alert-danger" role="alert"><%= flash[:message] %></div>
<% end %>
<form action="/clients" method="post">
<input class="form-control" type="text" name="client[name]" placeholder="Client Name*" required>
<br/>
<input class="form-control"type="email" name="client[email]" placeholder="Client Email*" required>
<br/>
<input class="form-control"type="text" name="client[phone_number]" placeholder="Client Phone Number">
<br/>
<input class="btn btn-primary" type="submit" value="Create Client">
</form>